<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        card_view:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgvLogoGeneral"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/handshake"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/txtvTituloGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test"

                android:layout_alignTop="@+id/imgvLogoGeneral"
                android:layout_toRightOf="@+id/imgvLogoGeneral"
                android:layout_toEndOf="@+id/imgvLogoGeneral"
                android:layout_marginTop="7dp" />

            <TextView
                android:id="@+id/txtvSubtituloGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/test"
                android:textColor="@color/android_darkorange"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/txtvTituloGeneral" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015"
                android:id="@+id/txtvFechaGeneral"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

